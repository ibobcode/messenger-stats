{
  "manifest_version": 2,
  "name": "Messenger Stats",
  "version": "1.0",
  "description": "Extension to scrap messenger data et make some cool charts out of it ! :)",
  "permissions": [
    "tabs",
    "identity",
    "downloads",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "unlimitedStorage",
    "*://*.facebook.com/*",
    "*://*.messenger.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["*://*.messenger.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon-32.png",
    "default_title": "Get some stats !",
    "default_popup": "index.html"
  }
}
